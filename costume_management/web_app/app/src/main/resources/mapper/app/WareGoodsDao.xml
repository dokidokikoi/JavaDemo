<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.harukaze.costume.app.dao.WareGoodsDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.harukaze.costume.app.entity.WareGoodsEntity" id="wareGoodsMap">
        <result property="id" column="id"/>
        <result property="amount" column="amount"/>
        <result property="createDate" column="create_date"/>
        <result property="updateDate" column="update_date"/>
        <result property="wareId" column="ware_id"/>
        <result property="goodsId" column="goods_id"/>
    </resultMap>

    <select id="selectWareGoodsByPage" resultType="WareGoodsEntity">
        select wg.id, wg.amount, wg.create_date, wg.update_date, wg.ware_id, wg.goods_id
        from hk_goods g, hk_ware w, hk_ware_goods wg
        <where>
            and g.id = wg.goods_id AND w.id = wg.ware_id
            <if test="key != null">
                and (g.name = #{key} OR g.name LIKE CONCAT('%',#{key},'%'))
            </if>
            <if test="wareAddress != null">
                AND w.address LIKE CONCAT('%',#{wareAddress},'%')
            </if>
            <if test="orderBy != null">
                order by g.price desc
            </if>
        </where>
    </select>
</mapper>