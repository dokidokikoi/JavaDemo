<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.harukaze.costume.app.dao.UserRoleDao">
	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="UserRoleEntity" id="userRoleMap">
        <result property="roleId" column="role_id"/>
        <result property="userId" column="user_id"/>
    </resultMap>

    <select id="selectRoleList" resultType="RoleEntity">
        SELECT r.id, r.role_name, r.role_desc
        FROM hk_role r, hk_user_role ur
        WHERE #{userId} = ur.`user_id` AND ur.`role_id` = r.`id`
    </select>
</mapper>